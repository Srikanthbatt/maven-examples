  pipeline {
      agent any
      stages {
          stage('Build') {
              steps {
                  // Bind MySQL credentials from Jenkins Credentials
                  withCredentials([usernamePassword(credentialsId: 'your-credentials-id', usernameVariable: 'MYSQL_USER', passwordVariable: 'MYSQL_PASSWORD')]) {

                      // Your Spring Boot application build and deployment steps
                      sh '''
                          mvn clean install
                          java -jar your-app.jar --spring.datasource.username=$MYSQL_USER --spring.datasource.password=$MYSQL_PASSWORD
                      '''
                  }
              }
          }
      }
  }
